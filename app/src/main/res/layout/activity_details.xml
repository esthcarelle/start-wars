<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/imag"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"

                    android:id="@+id/image1"/>


            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/create_card_edge"
    android:layout_below="@id/imag"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@id/imag"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/birth"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@id/name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/eyeColor"
            android:textSize="15dp"
            android:text="Eye Color"
            android:layout_below="@id/birth"/>
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/height"
            android:text="Height"
            android:layout_below="@id/eyeColor"/>
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:text="Gender"
            android:layout_below="@id/height"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15dp"
            android:id="@+id/created"
            android:layout_below="@id/gender"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/destroyed"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@id/created"/>


        <TextView
            android:layout_below="@id/destroyed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affiliations"
            android:textSize="15dp"
            android:textAlignment="center"
            android:id="@+id/affiliations"/>
        <TextView
            android:layout_below="@id/affiliations"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/masters"/>
        <TextView
            android:layout_below="@id/masters"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/apprentices"/>



    </LinearLayout>

</LinearLayout>

        </RelativeLayout>


    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:background="#499999"
        android:layout_alignParentBottom="true"
        android:hint="Double click to Save" />



</RelativeLayout>